{
  // Defines the used measurement source.
  // Available values: MySql (MySqlSource).
  "UseMeasurementSource": "MySql",

  // Defines the path to the directory where the data protection keys will be stored.
  // The directory must be accessible for file reading and writing.
  "ProtectionKeysDirectoryPath": "./Keys",

  // Defines the time period in minutes from the latest logged measurement till the current moment beyond which
  // the data can be treated obsolete, so the corresponding warning will appear.
  "ObsoleteDataPeriod": 10,

  // Defines the named list of connection strings providing the database connection parameters.
  "ConnectionStrings": {
    "MySql": "Server=localhost; Port=3306; UserId=root; Password=; Database=PiClimate"
  },

  // The configuration's section related to MySQL options.
  // Matters only if the corresponding MySQL-related components are used.
  "MySqlOptions": {
    // Defines the connection string key from the root "ConnectionStrings" section to be used for MySQL connection.
    "UseConnectionStringKey": "MySql",

    // Defines the database table name for the measurements.
    "MeasurementsTableName": "Measurements"
  },

  // The configuration's section for authentication options.
  "AuthenticationOptions": {
    // Defines the authentication cookie expiration period in days used when the "Remember me" option is active.
    // Can be a floating point numeric value.
    "CookieExpirationPeriod": 7,

    // Defines the list of key-value pairs representing user names and corresponding passwords used for signing in.
    // Both user names and passwords are case-sensitive.
    // It is highly recommended to change the default values for better security.
    "LoginPairs": {
      "PiClimate": "Monitor"
    }
  }
}
