@page "/Auth/{handler}"
@model PiClimate.Monitor.Pages.Auth
@{
  Layout = "_Layout";
}

@if (!ModelState.IsValid)
{
  <div class="validation-summary alert alert-warning text-center">
    <span class="font-weight-bold">
      Failed to sign in:
    </span>

    <ul class="m-0 pl-3">
      @foreach (var target in Model.ModelState.Values)
      {
        @foreach (var message in target.Errors)
        {
          <li>@target.Errors[0].ErrorMessage</li>
        }
      }
    </ul>
  </div>
}

<form class="alert alert-secondary" method="POST">
  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Name:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Name" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Password:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Password" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Remember me:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Remember" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
    </div>
    <div class="col-6">
      <input type="submit" value="Sign in" class="btn btn-secondary" />
    </div>
  </div>
</form>
