@page "/Auth/{handler}"
@model Auth
@{
  Layout = "_Layout";
}

<partial name="ValidationSummary" model="@("Failed to sign in:", ModelState)" />

<form class="alert alert-secondary" method="POST">
  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Name:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Name" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Password:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Password" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
      Remember me:
    </div>
    <div class="col-6">
      <input class="form-control form-control-sm" asp-for="@Model.LoginForm.Remember" />
    </div>
  </div>

  <div class="form-inline my-2">
    <div class="col-6 text-right">
    </div>
    <div class="col-6">
      <input type="submit" value="Sign in" class="btn btn-secondary" />
    </div>
  </div>
</form>
