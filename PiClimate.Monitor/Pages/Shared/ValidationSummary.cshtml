@model (string Description, ModelStateDictionary ModelState)

@if (!Model.ModelState.IsValid)
{
  <dl class="validation-summary alert alert-warning text-center">
    <dt class="mb-2">@Model.Description</dt>

    @foreach (var error in Model.ModelState.Values.SelectMany(entry => entry.Errors, (entry, error) => error))
    {
      <dd>@error.ErrorMessage</dd>
    }
  </dl>
}
