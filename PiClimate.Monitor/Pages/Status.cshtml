@page "/Status/{Code:int}"
@model PiClimate.Monitor.Pages.Status
@{
  Layout = "_Layout";
}

<div class="alert alert-warning text-center">
  <div class="h1">
    @Model.Code
  </div>

  <div class="h4 my-4">
    @ReasonPhrases.GetReasonPhrase(Model.Code)
  </div>

  <div>
    <button class="btn btn-warning" onclick="history.back()">Back</button>
  </div>
</div>
