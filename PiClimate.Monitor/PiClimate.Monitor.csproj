<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>enable</Nullable>
    <Title>PiClimate Monitor</Title>
    <Authors>Egiraht</Authors>
    <Description>Climatic data monitor</Description>
    <Copyright>Egiraht (c) 2020</Copyright>
    <Company>Egiraht</Company>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.30" />
    <PackageReference Include="MySqlConnector" Version="0.62.0" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Scripts/PiClimate.Monitor.js/**/*.ts" />
    <TypeScriptCompile Include="Scripts/PiClimate.Monitor.js/**/*.ts" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Remove="Scripts/**/*.json" />
    <None Include="Scripts/**/*.json" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Static/**/*" />
    <Content Include="Static/**/*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
