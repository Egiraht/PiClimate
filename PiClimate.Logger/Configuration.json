{
  // Defines the measurement provider to use.
  // The value cannot be empty.
  // Available values: BmeReader (BmeReaderProvider), Bme280 (Bme280Provider), RandomData (RandomDataProvider).
  "UseMeasurementProvider": "Bme280",

  // Defines a comma-separated list of measurement loggers to use.
  // Available values: Console (ConsoleLogger), MySql (MySqlLogger).
  "UseMeasurementLoggers": "Console, MySql",

  // Defines a comma-separated list of measurement limiters to use.
  // The order of the used limiters in the list defines the limiter appliance order, so it may matter.
  // Available values: MySqlCount (MySqlCountLimiter), MySqlPeriod (MySqlPeriodLimiter).
  "UseMeasurementLimiters": "MySqlCount",

  // Defines the measurement loop delay value in seconds.
  "MeasurementLoopDelay": 60,

  // Defines the named list of connection strings providing the database connection parameters.
  "ConnectionStrings": {
    "MySql": "Server=localhost; Port=3306; UserId=root; Password=; Database=PiClimate"
  },

  // The configuration's section related to BME280 sensor options.
  // Matters only if the BME280 measurement provider is used.
  "Bme280Options": {
    // Defines the I2C bus ID.
    // Can be a decimal numeric or hexadecimal string value.
    "I2cBusId": 1,

    // Defines the custom I2C bus address.
    // Can be a decimal numeric or hexadecimal string value, or "null" if not used.
    "CustomI2cAddress": null,

    // Defines the BME280 pressure sampling mode.
    // Can be one of these values: "Skipped" (no measuring is performed), "UltraLowPower", "LowPower", "Standard", "HighResolution",
    // "UltraHighResolution".
    "PressureSampling": "UltraHighResolution",

    // Defines the BME280 temperature sampling mode.
    // Can be one of these values: "Skipped" (no measuring is performed), "UltraLowPower", "LowPower", "Standard", "HighResolution",
    // "UltraHighResolution".
    "TemperatureSampling": "UltraHighResolution",

    // Defines the BME280 humidity sampling mode.
    // Can be one of these values: "Skipped" (no measuring is performed), "UltraLowPower", "LowPower", "Standard", "HighResolution",
    // "UltraHighResolution".
    "HumiditySampling": "UltraHighResolution",

    // Defines the BME280 measurement filtering mode.
    // Can be one of these values: "Off" (no measurement value filtering), "X2", "X4", "X8", "X16".
    "FilteringMode": "Off",

    // Defines the BME280 power mode to be used for measuring.
    // Can be one of these values: "Normal" (continuous measurements), "Forced" (single measurement on request).
    "PowerMode": "Normal",

    // Defines the BME280 standby time (delay between measurements). Applicable only when the power mode is set to "Normal".
    // Can be one of these values: "Ms0_5" (0.5 ms), "Ms10" (10 ms), "Ms20" (20 ms), "Ms62_5" (62.5 ms), "Ms125" (125 ms),
    // "Ms250" (250 ms), "Ms500" (500 ms), "Ms1000" (1 s).
    "StandbyTime": "Ms62_5"
  },

  // The configuration's section related to BMEReader adapter device options.
  "BmeReaderOptions": {
    // Defines the serial port name where the BMEReader device is connected.
    "SerialPortName": "COM1"
  },

  // The configuration's section related to MySQL options.
  // Matters only if the corresponding MySQL-related components are used.
  "MySqlOptions": {
    // Defines the connection string key from the root "ConnectionStrings" section to be used for MySQL connection.
    "UseConnectionStringKey": "MySql",

    // Defines the database table name for the measurements.
    "MeasurementsTableName": "Measurements"
  },

  // The configuration's section for data row count limiters.
  // Matters only if the corresponding limiters are used.
  "CountLimiterOptions": {
    // Defines the total count of data rows to keep in the database table.
    "CountLimit": 1440
  },

  // The configuration's section for period limiters.
  // Matters only if the corresponding limiters are used.
  "PeriodLimiterOptions": {
    // Defines the time period in seconds that limits the data row lifetime.
    "PeriodLimit": 86400
  }
}
